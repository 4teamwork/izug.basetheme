/* overdue */
.overdue {
    padding: 1px 2em 2px 0 !important;
    background-repeat: no-repeat;
    background-position: top right;
    background-image: url(&dtml-portal_url;/icon_status_ueberfaellig.gif);
}
/* autocomplete menu styles (overriding jquery-ui styles) */
ul.ui-autocomplete {
    padding: 0;
}
ul.ui-autocomplete li a {
    color: &dtml-grey5;;
}
ul.ui-autocomplete li a.ui-state-hover {
    background: none &dtml-yellow; !important;
}

/* overlay content */
ul.member_listing {
    list-style: none;
    margin: 0;
    padding: 0;
}


/* jquery calendar widget */
.ui-datepicker {
    width: auto;
}
#ui-datepicker-div div.ui-datepicker-header {
    background-color: white;
    background-image: none;
    border-style: none;
}
.ui-datepicker .ui-datepicker-prev span,
.ui-datepicker .ui-datepicker-next span {
    padding: 0;
}
.ui-datepicker .ui-datepicker-prev.ui-state-hover,
.ui-datepicker .ui-datepicker-next.ui-state-hover {
    background-image: none !important;
    background-color: transparent;
}
#ui-datepicker-div table.ui-datepicker-calendar {
    border-top: 2px solid &dtml-zugblue;;
    border-bottom: 1px solid &dtml-borderblue;;
    border-right: 1px solid &dtml-borderblue;;
}
#ui-datepicker-div table.ui-datepicker-calendar thead tr {
    border-right: 1px solid white;
}
#ui-datepicker-div table.ui-datepicker-calendar td {
    border: 1px solid &dtml-zugblue;;
    padding: 0;
}
#ui-datepicker-div table.ui-datepicker-calendar td.ui-state-disabled {
    border: 1px solid &dtml-borderblue;;
    border-style: solid none none solid;
}
#ui-datepicker-div table.ui-datepicker-calendar td a.ui-state-default {
    background-color: &dtml-backgroundColor; !important;
    background-image: none;
    color: &dtml-grey5; !important;
    border-style: none;
    text-align: center;
    padding: 0;
    width: 2.727em;
    line-height: 2.727em;
}
#ui-datepicker-div table.ui-datepicker-calendar td a.ui-state-highlight {
    background-color: &dtml-zugblue; !important;
    color: &dtml-backgroundColor; !important;
}
#ui-datepicker-div table.ui-datepicker-calendar td a.ui-state-active {
    background-color: &dtml-yellow; !important;
    font-weight: bold;
}
div.table-checkbox-overlay {
    border: 1px dotted red;
    background-color: transparent;
}

/* navigation */
.portletNavigationTree li.navTreeItem {
    display: none !important;
}
.portletNavigationTree li.section-eingangskorb,
.portletNavigationTree li.section-eingangskorb li {
    display: block !important;
}

#portal-logo img {
    height: 4em;
    width: 9.6em;
}

/* Hide breadcrubs on login page so it doesn't obstruct site title */
body.template-login_form #portal-breadcrumbs {
    visibility: hidden;
}

/* group listing on user detail page */
.template-user-details table.vertical td ul {
    list-style:none;
    margin-left: 0;
    text-indent: 0;
}


/* Disable sprites for opengever.document.document objects in
ContentTreeWidget so icons don't appear twice.
See Issue #1069 Test Rot 2.0.3: Fehlende Icons bei Verweis-Baum u.ae.
https://extranet.4teamwork.ch/projects/opengever-kanton-zug/sprint-backlog/1069
*/

.contenttreeWidget .contenttype-opengever-document-document {
    background-image: none;
    padding-left: 0.2em !important;
}


/* Disable line margins of mail bodies display.*/
.mailBody p{
   margin: 0px;
}

/* error message view */
.template-default_error_message #portal-breadcrumbs {
  margin-left: 20em;
}

/* </dtml-with> */
