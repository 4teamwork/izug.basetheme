/*
** Stylesheet with Internet Explorer 9-specific workarounds.
*/

/* <dtml-with base_properties> */

/* Used to display the edit-sprite correctly in a extjs-table*/
table.x-grid3-row-table div.x-grid3-cell-inner a {
    padding-bottom:2px;
    padding-top:2px;
}

/* Used to display gradients in table rows*/
.x-grid3-hd-row {
    background: url(data:image/svg+xml;base64,);
}


/* Fixes IE9 bug where content grows when hovering over dynamically generated content
   See http://blog.brianrichards.net/post/6721471926/ie9-hover-bug-workaround for details */
div.x-grid3-viewport {
    min-height: 0%;
}

/* Fix for IE9 where external edit icon is cut off */
/* Mainly relevant for OpenGever, shouldn't hurt iZug though */
.x-grid3-col-external_edit_link a {
  line-height: 15px !important;
}


/* Fix for IE9 - two columns behoerden/private listings */

.listing-column-right, .listing-column-left {
    width: 23.536em;
}

/* </dtml-with> */
