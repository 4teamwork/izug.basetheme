<!-- Navigation -->
<div id="batching_container">
<div class="listingBar"
     i18n:domain="plone"
     metal:define-macro="navigation"
     tal:define="batch view/batch"
     tal:condition="batch/multiple_pages">


     <!-- Link to first -->
     <span class="first">
         <a href=""
            tal:attributes="href string:${view/url}?pagenumber=1&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">&laquo;</a>
     </span>
     
    <span class="previous">
        <a tal:condition="batch/has_previous"
           tal:attributes="href string:${view/url}?pagenumber=${batch/previouspage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">
           &lsaquo;
        </a>
        <a tal:condition="not:batch/has_previous" name="previous">&lsaquo;</a>
    </span>

    <!-- Pagelist with links to previous pages for quick navigation -->
    <span tal:repeat="pagenumber batch/previous_pages">
      <a href="" tal:content="pagenumber" 
         tal:attributes="href string:${view/url}?pagenumber=$pagenumber&amp;sort_on=${request/sort_on|string:getObjPositionInParent}"/>
    </span>

    <!-- Current page -->
    <span tal:condition="batch/navlist"
          tal:omit-tag="">
        <span tal:content="batch/pagenumber" class="current">Current page number</span><span></span>
    </span>

    <!-- Pagelist with links to next pages for quick navigation -->
    <span tal:repeat="pagenumber batch/next_pages">
      <a href="" tal:content="pagenumber" 
         tal:attributes="href string:${view/url}?pagenumber=$pagenumber&amp;sort_on=${request/sort_on|string:getObjPositionInParent}"/>
    </span>


    <span class="next">
        <a tal:condition="batch/has_next"
           tal:attributes="href string:${view/url}?pagenumber=${batch/nextpage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">
           &rsaquo;
        </a>
        <a tal:condition="not:batch/has_next">&rsaquo;</a>
    </span>
    
    <!-- Link to last -->
    <span class="last">
        <a href=""
           tal:attributes="href string:${view/url}?pagenumber=${batch/lastpage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">&raquo;</a>
    </span>
</div>
</div>
