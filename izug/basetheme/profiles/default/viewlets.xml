<?xml version="1.0"?>
<object>
    <!-- portal header -->
    <order manager="plone.portalheader" skinname="iZug Base Theme">
        <viewlet name="plone.skip_links"/>
        <viewlet name="plone.site_actions"/>
        <viewlet name="plone.personal_bar"/>
        <viewlet name="plone.logo"/>
        <viewlet name="izug.banner"/>
        <viewlet name="plone.global_sections"/>
        <viewlet name="plone.searchbox"/>
    </order>
    <!--hidden manager="plone.portalheader" skinname="iZug Base Theme">
        <viewlet name="izug.banner"/>
    </hidden-->

    <!--- above content -->
    <order manager="plone.abovecontent" skinname="iZug Base Theme">
        <viewlet name="izug.path_bar"/>
    </order>
    <hidden manager="plone.abovecontent" skinname="iZug Base Theme">
        <viewlet name="plone.path_bar"/>
    </hidden>
    
    <order manager="plone.abovecontenttitle" skinname="iZug Base Theme">
        <viewlet name="plone.abovecontenttitle.documentactions"/>    
    </order>

    <!-- below content title -->
    <order manager="plone.belowcontenttitle" skinname="iZug Base Theme">
        <viewlet name="plone.abovecontenttitle.documentactions"/>
        <viewlet name="plone.belowcontenttitle.documentbyline"/>
        <viewlet name="ftw.tabbedview.searchbox"/>
        <viewlet name="ftw.contentviews"/>
        <viewlet name="plone.belowcontenttitle.keywords"/>
    </order>
    <hidden manager="plone.belowcontenttitle" skinname="iZug Base Theme">
        <viewlet name="plone.abovecontenttitle.documentactions"/>    
    </hidden>
    
    <!-- portal top -->
    <order manager="plone.portaltop" skinname="iZug Base Theme">
        <viewlet name="plone.header"/>
        <viewlet name="plone.app.i18n.locales.languageselector"/>
    </order>
    <hidden manager="plone.portaltop" skinname="iZug Base Theme">
        <viewlet name="plone.path_bar"/>
        <viewlet name="plone.personal_bar"/>
    </hidden>

    <!-- content views -->
    <order manager="plone.contentviews" skinname="iZug Base Theme">
        <viewlet name="plone.contentviews"/>
        <viewlet name="plone.contentactions"/>
    </order>

    <!-- below content -->
    <order manager="plone.belowcontent" skinname="iZug Base Theme">
        <viewlet name="plone.nextprevious"/>
        <viewlet name="plone.site_actions"/>
    </order>
    
    <!-- below content body -->
    <hidden manager="plone.belowcontentbody" skinname="iZug Base Theme">
        <viewlet name="plone.abovecontenttitle.documentactions"/>
    </hidden>

    <!-- portal footer -->
    <hidden manager="plone.portalfooter" skinname="iZug Base Theme">
        <viewlet name="plone.footer"/>
        <viewlet name="plone.colophon"/>
        <viewlet name="plone.site_actions"/>
    </hidden>
</object>